{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <!-- hero -->
    <section class="lg:bg-white bg-blue-50">
        <div class="container-custom h-5/6">
            <div class="flex h-full">
