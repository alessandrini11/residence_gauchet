{% extends 'base.html.twig' %}

    {% block body %}
    
    <section class="">
        <div class="container-custom py-8">
            <div class="">
                <h3 class="text-3xl">{{post.title}}</h3>
            </div>
            <ul class="flex space-x-3">
                {% for category in post.Categories %}
                    <li class="bg-blue-100 text-blue-900 p-2 rounded ">{{category.name}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="container-custom">
            <div class="grid lg:grid-cols-3 space-y-5 lg:space-y-0 lg:space-x-5">
                <div class="lg:col-span-2">
                    <div class="">
                        <img class="aspect-video w-full rounded-md" src={{asset(post.image)}} alt="">
                    </div>
                    <div class="flex text font-light space-x-5 py-5">
                        <div>
                            <span><i class="fa-regular fa-clock"></i></span>
                            <span>{{post.createdAt | date('d M Y')}}</span>
                        </div>
                        <div>
                            <span><i class="fa-regular fa-eye"></i></span>
                            <span>{{post.visitors | length }}</span>
                        </div>
                        <div>
                            <span><i class="fa-regular fa-user"></i></span>
                            <span>{{post.user.pseudo }}</span>
                        </div>
                    </div>
                    <p class="font-thin">{{post.content | raw }}</p>
                </div>
                <div class="lg:col-span-1">
                    <div class="p-6 bg-white rounded-md space-y-5">
                        
                        <div class="space-y-3">
                            <h3>Categories</h3>
                            <ul class="space-y-2 font-thin">
                                {% for category in categories %}
                                <li><span class=""><a href={{path('app_blog', {category: category.name})}} class="">{{category.name}}</a></span></li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="space-y-3">
                            <div id="fixed-bar" class="w-full">
                                <div class="fb-page" data-href="https://web.facebook.com/UdlaJudo" data-tabs="timeline" data-width="" data-height="250" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://web.facebook.com/UdlaJudo" class="fb-xfbml-parse-ignore"><a href="https://web.facebook.com/UdlaJudo">Douala University Club judo</a></blockquote></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endblock %}