{% extends 'admin.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <section>
        <div class="w-11/12 mx-auto">
          <h3 class="text-3xl font-medium text-gray-600">Statistiques</h3>
          <div class="">
              <div class="grid md:grid-cols-2 gap-5 lg:grid-cols-4 ">
                  <div class="rounded-lg shadow-md p-6">
                      <div class="flex justify-between items-center">
                          <div class="flex flex-col">
                              <span class="text-gray-500 font-semibold capitalize">Utilisateurs</span>
                              <span class="text-gray-600 font-semibold">{{users | length }}</span>
                          </div>
                          <div class="">
                          <span class="bg-red-500 text-white p-3 rounded-lg">
                              <i class="fa fa-user"></i>
                          </span>
                          </div>
                      </div>
                  </div>
                  <div class="rounded-lg shadow-md p-6">
                      <div class="flex justify-between items-center">
                          <div class="flex flex-col">
                              <span class="text-gray-500 font-semibold capitalize">Appartements</span>
                              <span class="text-gray-600 font-semibold">{{rooms | length }}</span>
                          </div>
                          <div class="">
                          <span class="bg-green-500 text-white p-3 rounded-lg">
                              <i class="fa fa-hotel"></i>
                          </span>
                          </div>
                      </div>
                  </div>
                  <div class="rounded-lg shadow-md p-6">
                      <div class="flex justify-between items-center">
                          <div class="flex flex-col">
                              <span class="text-gray-500 font-semibold capitalize">Articles</span>
                              <span class="text-gray-600 font-semibold">{{posts | length }}</span>
                          </div>
                          <div class="">
                          <span class="bg-yellow-500 text-white p-3 rounded-lg">
                              <i class="fa fa-pencil"></i>
                          </span>
                          </div>
                      </div>
                  </div>
                  <div class="rounded-lg shadow-md p-6">
                      <div class="flex justify-between items-center">
                          <div class="flex flex-col">
                              <span class="text-gray-500 font-semibold capitalize">Visiteurs</span>
                              <span class="text-gray-600 font-semibold">{{visitors | length }}</span>
                          </div>
                          <div class="">
                            <span class="bg-indigo-500 text-white p-3 rounded-lg">
                                <i class="fa fa-user-cog"></i>
                            </span>
                          </div>
                      </div>
                  </div>
          </div>
          <div class="grid md:grid-cols-2">
            <div class="">
            {# {{ render_chart(chart) }} #}
          </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}
