{{ form_start(form) }}
    <div class="">
        {{ form_widget(form.title,{'attr':{'placeholder': 'Title','class':'mt-2 w-full focus:outline-none border border-black rounded-md py-2 px-4'}}) }}
    </div>
    <div class="">
        {{ form_widget(form.content,{'attr':{'placeholder': 'Content','class':'mt-2 w-full focus:outline-none border border-black rounded-md py-2 px-4'}}) }}
    </div>
    <div class="">
        {{ form_widget(form.categories,{'attr':{'placeholder': 'Title','class':'mt-2 w-full focus:outline-none border border-black rounded-md py-2 px-4'}}) }}
    </div>
    <div class=" grid grid-cols-1 gap-5 md:grid-cols-2">
        {{ form_widget(form.image,{'attr':{'class':'mt-2 w-full focus:outline-none py-2 px-4'}}) }}
        <div id="image-displayer" class="max-h-40 w-40 hidden relative">
            <img class="w-full aspect-square" id="image-preview"
                alt=""
                src=""
            />
            <span id="close-image-preview" class="cursor-pointer absolute -top-2 -right-2 h-5 w-5 bg-red-500 rounded-full text-white flex justify-center items-center">
                X
            </span>
        </div>
    </div>
    <div class="">
        {{ form_widget(form.user,{'attr':{'placeholder': 'Title','class':'mt-2 w-full focus:outline-none border border-black rounded-md py-2 px-4'}}) }}
    </div>
    <button class="w-full bg-green-500 py-2 mt-2 rounded text-white flex items-center justify-center">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
