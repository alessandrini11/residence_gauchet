{{ form_start(form) }}
<div class="space-y-2">
    <div class="">
        <label for="">Titre</label>
        {{ form_widget(form.title,{'attr':{'placeholder': 'Title','class':' w-full focus:outline-none border border-black rounded-md py-2 px-4'}}) }}
    </div>
    <div class="my-3">
        <label for="">Contenu</label>
        {{ form_widget(form.content,{'attr':{'placeholder': 'Content','class':' w-full focus:outline-none border border-black rounded-md py-2 px-4'}}) }}
    </div>
    <div class="">
        <label for="">Categories</label>
        {{ form_widget(form.categories,{'attr':{'placeholder': 'Title','class':' w-full focus:outline-none border border-black rounded-md py-2 px-4'}}) }}
    </div>
    <div class=" grid grid-cols-1 gap-5 md:grid-cols-2">
        {{ form_widget(form.file,{'attr':{'class':' w-full focus:outline-none py-2 px-4'}}) }}
        <div id="image-displayer" class="max-h-40 w-40 hidden relative">
            <img class="w-full aspect-square" id="image-preview"
                alt=""
                src=""
            />
            <span id="close-image-preview" class="cursor-pointer absolute -top-2 -right-2 h-5 w-5 bg-red-500 rounded-full text-white flex justify-center items-center">
                X
            </span>
        </div>
    </div>
    <button class="w-full bg-green-500 py-2  rounded text-white flex items-center justify-center">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
